{
  "name": "simple-license/plugin-sdk",
  "description": "PHP SDK for WordPress plugins that are licensed software via Simple License System",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Simple License System",
      "email": "support@simplelicensesystem.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "infection/infection": "^0.31",
    "fakerphp/faker": "^1.23",
    "phpstan/phpstan": "^2.0",
    "yoast/phpunit-polyfills": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "SimpleLicense\\Plugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SimpleLicense\\Plugin\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
